# Server Configuration
SERVER_PORT=8888
DEBUG=True

# MongoDB Configuration
MONGODB_URI=mongodb://app_user:app_password_secure@localhost:27017/image_enhancer
MONGODB_DB_NAME=image_enhancer

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
